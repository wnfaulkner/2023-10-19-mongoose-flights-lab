<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline" id="airline">
    <% airlines.forEach(function(airline) { %>
      <option value="<%= airline %>"><%= airline %></option>
    <% }); %>
  </select>
  <label>Departure Airport:</label>
  <select name="airport" id="airport">
    <% airports.forEach(function(airport) { %>
      <option value="<%= airport %>"><%= airport %></option>
    <% }); %>
  </select>
  <label>Flight Number (10-9999):</label>
  <input type="number" name="flightNo">
  <label>Departure Date (future date up to one year from now):</label>
  <input type="datetime-local" name="departureDate">
  <br>
  <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>
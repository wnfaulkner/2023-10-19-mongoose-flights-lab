<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Flight No.</th>
      <th>Departure Airport</th>
      <th>Departure Date</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.airport %></td>
        <td><%= f.departureDate %></td>
        <td>
          <a href="/flights/<%=f.id%>">
            <button type = "submit" >View Details</button>
          </a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>
